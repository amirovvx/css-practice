<header class="header">
	<div class="col-3">
		{{>logo}}
	</div>
	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header }}
		</div>
	</nav>
</header>
<main class="main">
	{{#with info}}
		<div class="info_content">
			<h1 class="info_title">{{title}}</h1>
			<p class="info_text">{{description}}</p>
		</div>
	{{/with}}
	{{#with form}}
		<form class="form">
			<h2 class="form_title">{{title}}</h2>
			<div class="form_input_list">
				{{#each inputs}}
					<input type="{{type}}" placeholder="{{placeholder}}" class="form_input"
					name="{{name}}" id="form-input-{{id}}">
				{{/each}}
			</div>
			<div class="form_checkbox">
				<input type="checkbox" name="{{checkbox.name}}">
				<label>{{checkbox.label}}</label>
			</div>
			<button type="submit" class="form_button">{{button}}</button>
			<p class="form_info">{{info}}</p>
		</form>
	{{/with}}
</main>

<section class="updates">
	{{#with updates}}
		<h2 class="upd_title">{{title}}</h2>		
		{{#each list}}
			<div class="upd_content">
				<div>
					<img src="https://picsum.photos/500/500" class="upd_image">
				</div>
				<div>
					<div class="list_title">{{nickname}}</div>
					<p class="list_text">{{description}}</p>
				</div>
			</div>
		{{/each}}
		<a href="{{show_all.url}}" class="upd_button">{{show_all.text}}</a>
	{{/with}}
</section>

<section class="expirience">
	{{#with expirience}}
		<div class="exp_content">
			<h2 class="exp_title">{{title}}</h2>
			<span class="exp_badge">{{badge}}</span>
			<div class="exp_list">
				{{#each list}}				
					<div class="exp_card">
						<h3 class="exp_card_title">{{name}}</h3>
						<p class="exp_card_text">{{details}}</p>
					</div>
				{{/each}}
			</div>
		</div>
	{{/with}}
</section>

<footer class="footer">	
	<div>
		{{>logo}}
		<span class="footer_copyright">Copyright 2024</span>
	</div>
	{{#each footer}}
		<div>
			<span class="footer_title">{{title}}</span>
			{{> nav list=links isVertical=true}}
		</div>
	{{/each}}
</footer>